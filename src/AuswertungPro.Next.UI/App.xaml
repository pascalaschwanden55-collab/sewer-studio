<Application x:Class="AuswertungPro.Next.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary xmlns:vm="clr-namespace:AuswertungPro.Next.UI.ViewModels.Pages"
                    xmlns:views="clr-namespace:AuswertungPro.Next.UI.Views.Pages">
            <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="Theme/ThemeLight.xaml" />
                <ResourceDictionary Source="Theme/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- MVVM: ViewModel -> View -->
            <DataTemplate DataType="{x:Type vm:ProjectPageViewModel}">
                <views:ProjectPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:OverviewPageViewModel}">
                <views:OverviewPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DataPageViewModel}">
                <views:DataPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SchaechtePageViewModel}">
                <views:SchaechtePage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ImportPageViewModel}">
                <views:ImportPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ExportPageViewModel}">
                <views:ExportPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:VsaPageViewModel}">
                <views:VsaPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DiagnosticsPageViewModel}">
                <views:DiagnosticsPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SettingsPageViewModel}">
                <views:SettingsPage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BuilderPageViewModel}">
                <views:BuilderPage/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
