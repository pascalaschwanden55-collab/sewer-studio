<Window x:Class="AuswertungPro.Next.UI.Dialogs.OptionsEditorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AuswertungPro.Next.UI.Dialogs"
    Title="Liste bearbeiten" Height="400" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.DataContext>
        <local:OptionsEditorViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ItemsList" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Hinzufügen" Command="{Binding AddCommand}" Margin="0,0,8,0"/>
            <Button Content="Entfernen" Command="{Binding RemoveCommand}" Margin="0,0,8,0"/>
            <Button Content="↑" Command="{Binding MoveUpCommand}" Margin="0,0,8,0"/>
            <Button Content="↓" Command="{Binding MoveDownCommand}" Margin="0,0,8,0"/>
            <Button Content="OK" Command="{Binding OkCommand}" IsDefault="True"/>
            <Button Content="Abbrechen" Command="{Binding CancelCommand}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
