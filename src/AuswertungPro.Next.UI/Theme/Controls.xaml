<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════
         CYBERPUNK CONTROLS — Neon-infused frosted widgets
         ═══════════════════════════════════════════════════════ -->

    <!-- Pulsing glow animation keyframes -->
    <Storyboard x:Key="GlowAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.2"/>
            <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.7"/>
            <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0.2"/>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- ═══ COMBOBOX ═══ -->
    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="Padding" Value="14,8"/>
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="BorderElement"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True"/>
                        <ToggleButton x:Name="ToggleButton"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Focusable="False"
                                    IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                    ClickMode="Press">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Grid Background="{TemplateBinding Background}">
                                        <Border CornerRadius="10" Background="Transparent"/>
                                        <Path x:Name="Arrow"
                                            Data="M0,0 L4,4 L8,0 Z"
                                            Fill="{StaticResource NeonCyanBrush}"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,14,0"
                                            VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <ContentPresenter x:Name="ContentSite"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        IsHitTestVisible="False"
                                        TextElement.Foreground="{TemplateBinding Foreground}"/>
                        <TextBox x:Name="PART_EditableTextBox"
                               Background="Transparent"
                               BorderThickness="0"
                               Focusable="True"
                               Foreground="{TemplateBinding Foreground}"
                               HorizontalAlignment="Left"
                               Margin="{TemplateBinding Padding}"
                               Style="{x:Null}"
                               Template="{DynamicResource ComboBoxTextBox}"
                               VerticalAlignment="Center"
                               Visibility="Hidden"/>
                        <Popup x:Name="Popup"
                             Placement="Bottom"
                             IsOpen="{TemplateBinding IsDropDownOpen}"
                             AllowsTransparency="True"
                             Focusable="False"
                             PopupAnimation="Slide">
                            <Grid MinWidth="{TemplateBinding ActualWidth}"
                                MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                <Border Background="{StaticResource CardBrush}"
                                      BorderBrush="{StaticResource NeonCyanBrush}"
                                      BorderThickness="1"
                                      CornerRadius="10"
                                      Margin="0,4,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="{StaticResource ColorNeonCyan}"
                                                          BlurRadius="18"
                                                          ShadowDepth="0"
                                                          Opacity="0.35"/>
                                    </Border.Effect>
                                    <ScrollViewer>
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEditable" Value="True">
                            <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BorderElement" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="BorderElement" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                            <Setter TargetName="BorderElement" Property="BorderThickness" Value="1.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem with hover glow -->
    <Style TargetType="{x:Type ComboBoxItem}">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.12"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══ CHECKBOX — Neon check indicator ═══ -->
    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Border x:Name="CheckBorder"
                                Width="20" Height="20"
                                Background="{StaticResource CardBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="5"
                                Margin="0,0,8,0">
                            <Path x:Name="CheckMark"
                                Data="M2,6 L6,10 L14,2"
                                Stroke="{StaticResource NeonCyanBrush}"
                                StrokeThickness="2"
                                Visibility="Collapsed"/>
                        </Border>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="CheckBorder" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.15"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══ PROGRESSBAR — Neon gradient fill with glow ═══ -->
    <Style TargetType="{x:Type ProgressBar}">
        <Setter Property="Height" Value="8"/>
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                        <Border x:Name="PART_Track"
                                CornerRadius="4"
                                Background="{StaticResource CardGlassBrush}">
                            <Border x:Name="PART_Indicator"
                                    Background="{StaticResource NeonGradient}"
                                    CornerRadius="4"
                                    HorizontalAlignment="Left">
                                <Border.Effect>
                                    <DropShadowEffect Color="{StaticResource ColorNeonCyan}"
                                                    BlurRadius="14"
                                                    ShadowDepth="0"
                                                    Opacity="0.7"/>
                                </Border.Effect>
                            </Border>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══ TABCONTROL — Glass panel with neon tab indicators ═══ -->
    <Style TargetType="{x:Type TabControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TabPanel x:Name="HeaderPanel"
                                Grid.Row="0"
                                IsItemsHost="True"
                                Background="Transparent"/>
                        <Border x:Name="ContentPanel"
                                Grid.Row="1"
                                Background="{StaticResource CardGlassBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="0,10,10,10"
                                Margin="0,0,0,0">
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                            Content="{TemplateBinding SelectedContent}"
                                            ContentTemplate="{TemplateBinding SelectedContentTemplate}"
                                            Margin="20"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TabItem — Neon underline when active -->
    <Style TargetType="{x:Type TabItem}">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="18,10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border x:Name="Border"
                            Background="Transparent"
                            BorderThickness="0,0,0,3"
                            BorderBrush="Transparent"
                            CornerRadius="10,10,0,0"
                            Margin="0,0,4,0">
                        <ContentPresenter x:Name="ContentSite"
                                        Content="{TemplateBinding Header}"
                                        Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.08"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.04"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══ SLIDER — Neon thumb with glow ═══ -->
    <Style TargetType="{x:Type Slider}">
        <Setter Property="Height" Value="24"/>
        <Setter Property="Background" Value="{StaticResource CardGlassBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Border x:Name="TrackBackground"
                                Height="4"
                                Background="{StaticResource BorderBrush}"
                                CornerRadius="2"
                                VerticalAlignment="Center"/>
                        <Track x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="Slider.DecreaseLarge"
                                            Style="{DynamicResource SliderButtonStyle}"/>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{DynamicResource SliderThumbStyle}"/>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="Slider.IncreaseLarge"
                                            Style="{DynamicResource SliderButtonStyle}"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SliderButtonStyle" TargetType="RepeatButton">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Slider thumb — Glowing neon orb -->
    <Style x:Key="SliderThumbStyle" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Ellipse x:Name="Ellipse"
                           Width="18" Height="18"
                           Fill="{StaticResource NeonCyanBrush}"
                           Stroke="{StaticResource NeonCyanBrush}"
                           StrokeThickness="1">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="{StaticResource ColorNeonCyan}"
                                            BlurRadius="12"
                                            ShadowDepth="0"
                                            Opacity="0.7"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Ellipse" Property="Fill" Value="{StaticResource NeonPinkBrush}"/>
                            <Setter TargetName="Ellipse" Property="Stroke" Value="{StaticResource NeonPinkBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══ TOOLTIP — Dark glass with neon border ═══ -->
    <Style TargetType="{x:Type ToolTip}">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

</ResourceDictionary>
