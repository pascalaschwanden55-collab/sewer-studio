<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════
         LIGHT CYBERPUNK — Bright Neon HUD on frosted glass
         ═══════════════════════════════════════════════════════ -->

    <!-- Bright frosted surfaces -->
    <Color x:Key="ColorBgLight">#FFF0F2F8</Color>        <!-- Cool ice-white -->
    <SolidColorBrush x:Key="BgLightBrush" Color="{StaticResource ColorBgLight}"/>
    <Color x:Key="ColorBgMid">#FFE4E8F0</Color>          <!-- Soft blue-grey -->
    <Color x:Key="ColorCard">#FFFCFCFF</Color>            <!-- Bright card surface -->
    <Color x:Key="ColorCardGlass">#B8F4F6FB</Color>       <!-- Frosted glass card -->
    <Color x:Key="ColorBorder">#FFC8D0E0</Color>          <!-- Soft lavender border -->
    <Color x:Key="ColorHeader">#FFECEEF6</Color>          <!-- Bright header -->

    <!-- ⚡ NEON ACCENTS — Electric & Vibrant on light -->
    <Color x:Key="ColorNeonCyan">#FF0099AA</Color>        <!-- Deep Cyan (readable on light) -->
    <Color x:Key="ColorNeonPurple">#FF8B00D4</Color>      <!-- Rich Purple -->
    <Color x:Key="ColorNeonBlue">#FF2563EB</Color>        <!-- Vivid Blue -->
    <Color x:Key="ColorNeonGreen">#FF059669</Color>       <!-- Emerald Green -->
    <Color x:Key="ColorNeonPink">#FFD6006C</Color>        <!-- Hot Pink (contrast-safe) -->

    <!-- Text on light -->
    <Color x:Key="ColorTextPrimary">#FF1A1F2E</Color>     <!-- Near-black text -->
    <Color x:Key="ColorTextSecondary">#FF4B5563</Color>   <!-- Medium grey -->
    <Color x:Key="ColorTextMuted">#FF9CA3B8</Color>       <!-- Soft muted -->

    <!-- Frosted gradient background -->
    <LinearGradientBrush x:Key="BgBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFF0F2F8" Offset="0"/>
        <GradientStop Color="#FFE8ECF4" Offset="0.35"/>
        <GradientStop Color="#FFEAECF5" Offset="0.7"/>
        <GradientStop Color="#FFF0F2F8" Offset="1"/>
    </LinearGradientBrush>

    <!-- Neon Gradient — Cyan → Blue → Purple -->
    <LinearGradientBrush x:Key="NeonGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource ColorNeonCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource ColorNeonBlue}" Offset="0.5"/>
        <GradientStop Color="{StaticResource ColorNeonPurple}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Holographic glass overlay -->
    <LinearGradientBrush x:Key="GlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#B0FFFFFF" Offset="0"/>
        <GradientStop Color="#60FFFFFF" Offset="0.5"/>
        <GradientStop Color="#30FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Nav sidebar: frosted light panel -->
    <LinearGradientBrush x:Key="NavPanelBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#FFEEF0F8" Offset="0"/>
        <GradientStop Color="#FFE6E9F3" Offset="0.5"/>
        <GradientStop Color="#FFECEEF6" Offset="1"/>
    </LinearGradientBrush>

    <!-- Neon border glow brush -->
    <LinearGradientBrush x:Key="NeonBorderGlow" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource ColorNeonCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource ColorNeonPurple}" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource ColorCard}"/>
    <SolidColorBrush x:Key="CardGlassBrush" Color="{StaticResource ColorCardGlass}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ColorBorder}"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource ColorHeader}"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="{StaticResource ColorNeonCyan}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource ColorTextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource ColorTextSecondary}"/>
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource ColorTextMuted}"/>
    <SolidColorBrush x:Key="NeonCyanBrush" Color="{StaticResource ColorNeonCyan}"/>
    <SolidColorBrush x:Key="NeonPinkBrush" Color="{StaticResource ColorNeonPink}"/>
    <SolidColorBrush x:Key="NeonPurpleBrush" Color="{StaticResource ColorNeonPurple}"/>
    <SolidColorBrush x:Key="NeonGreenBrush" Color="{StaticResource ColorNeonGreen}"/>

    <!-- ═══════════════════════════════════════════════════════
         WINDOW — Borderless frosted chrome
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="Segoe UI Variable Display, Segoe UI, Arial"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="ResizeMode" Value="CanResizeWithGrip"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════
         CARD — Frosted glass panel with neon edge glow
         ═══════════════════════════════════════════════════════ -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardGlassBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource ColorNeonCyan}" BlurRadius="30" ShadowDepth="0" Opacity="0.18"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════
         BUTTON — Neon-bordered with animated glow
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type Button}">
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Outer neon glow -->
                        <Border Name="GlowBorder"
                                Background="{StaticResource NeonCyanBrush}"
                                CornerRadius="12"
                                Opacity="0">
                            <Border.Effect>
                                <BlurEffect Radius="16"/>
                            </Border.Effect>
                        </Border>
                        <!-- Main surface -->
                        <Border Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RecognizesAccessKey="True"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0.35" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="GlowBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0" Duration="0:0:0.25"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="{StaticResource NeonGradient}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="MainBorder" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.15"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="GlowBorder" Property="Opacity" Value="0.5"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Primary Button — Full neon gradient fill -->
    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource NeonGradient}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Secondary Button — Subtle surface -->
    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════
         TEXTBOX — Bright input with neon focus ring
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <!-- Focus glow behind -->
                        <Border Name="glowRing"
                                CornerRadius="10"
                                Opacity="0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.12"/>
                            </Border.Background>
                            <Border.Effect>
                                <BlurEffect Radius="12"/>
                            </Border.Effect>
                        </Border>
                        <Border Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            <Setter TargetName="glowRing" Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════
         DATAGRID — Frosted grid with neon headers
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="RowHeight" Value="38"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource ColorBorder}" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="RowBackground" Value="{StaticResource CardBrush}"/>
        <Setter Property="AlternatingRowBackground">
            <Setter.Value>
                <SolidColorBrush Color="#FFF4F5FA"/>
            </Setter.Value>
        </Setter>
        <Setter Property="AlternationCount" Value="2"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CanUserResizeColumns" Value="True"/>
        <Setter Property="CanUserSortColumns" Value="True"/>
    </Style>

    <!-- DataGrid Header — Neon cyan underline -->
    <Style TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Background" Value="{StaticResource HeaderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridColumnHeader">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <Thumb x:Name="PART_LeftHeaderGripper"
                               HorizontalAlignment="Left"
                               Width="6"
                               Background="Transparent"
                               Cursor="SizeWE"/>
                        <Thumb x:Name="PART_RightHeaderGripper"
                               HorizontalAlignment="Right"
                               Width="6"
                               Background="Transparent"
                               Cursor="SizeWE"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- DataGridCell -->
    <Style TargetType="{x:Type DataGridCell}">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4,2"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.15"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- DataGridRow -->
    <Style TargetType="{x:Type DataGridRow}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.06"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.12"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════════════════════════════════════════════════════
         LISTBOX — Transparent container
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <!-- Nav item — neon selected indicator -->
    <Style x:Key="NavItemStyle" TargetType="ListBoxItem">
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="bd"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            Padding="12,8"
                            BorderThickness="1"
                            BorderBrush="Transparent">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="bd" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.05"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="bd" Property="BorderBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════
         GROUPBOX — Neon-framed panel
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type GroupBox}">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0"
                                Background="{StaticResource HeaderBrush}"
                                BorderBrush="{StaticResource NeonCyanBrush}"
                                BorderThickness="0,0,0,2"
                                CornerRadius="8,8,0,0"
                                Padding="12,8">
                            <ContentPresenter ContentSource="Header"
                                            TextElement.Foreground="{StaticResource NeonCyanBrush}"
                                            TextElement.FontWeight="SemiBold"/>
                        </Border>
                        <Border Grid.Row="1"
                                Background="{StaticResource CardGlassBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="0,0,12,12"
                                Padding="16">
                            <ContentPresenter/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════
         MENU — Frosted cyberpunk menu bar
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type Menu}">
        <Setter Property="Background" Value="{StaticResource HeaderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style TargetType="{x:Type MenuItem}">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource ColorNeonCyan}" Opacity="0.12"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════════════════════════════════════════════════════
         SCROLLBAR — Slim neon scrollbar
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="8"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
