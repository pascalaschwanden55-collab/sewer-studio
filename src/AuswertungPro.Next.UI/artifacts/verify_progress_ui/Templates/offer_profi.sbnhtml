<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <style>
    @page { size: A4; }
    * { box-sizing: border-box; }
    body { font-family: 'Segoe UI', Arial, Helvetica, sans-serif; font-size: 10.5pt; margin: 0; color: #1a1a1a; line-height: 1.45; }

    /* ──────── COVER / HEADER ──────── */
    .cover {
      position: relative;
      padding-bottom: 18px;
      margin-bottom: 18px;
    }
    .cover::after {
      content: "";
      display: block;
      height: 3px;
      background: linear-gradient(90deg, #0b5e7a 0%, #0b5e7a 60%, #e0e0e0 100%);
      margin-top: 14px;
    }
    .cover-top {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }
    .brand { display: flex; align-items: flex-start; gap: 14px; }
    .logo { height: 56px; width: auto; }
    .sender {
      white-space: pre-line;
      font-size: 9.5pt;
      line-height: 1.3;
      color: #333;
    }
    .doc-meta {
      text-align: right;
      font-size: 9.5pt;
      line-height: 1.4;
      white-space: pre-line;
      color: #333;
    }
    .doc-meta .offer-label {
      font-size: 11pt;
      font-weight: 700;
      color: #0b5e7a;
      letter-spacing: 0.04em;
      text-transform: uppercase;
    }

    /* Title */
    .title-section { margin: 0 0 14px; }
    .title {
      font-size: 16pt;
      font-weight: 700;
      color: #0b5e7a;
      margin: 0 0 2px;
    }
    .subtitle {
      font-size: 11pt;
      color: #444;
      margin: 0;
    }

    /* ──────── INFO CARDS ──────── */
    .info-row {
      display: flex;
      gap: 16px;
      margin: 0 0 18px;
    }
    .info-card {
      flex: 1;
      border: 1px solid #d0d4d8;
      border-radius: 8px;
      padding: 12px 14px;
      background: #fafbfc;
      min-height: 70px;
    }
    .info-card h4 {
      margin: 0 0 6px;
      font-size: 9pt;
      font-weight: 600;
      color: #0b5e7a;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    .info-card .content {
      white-space: pre-line;
      font-size: 10pt;
      line-height: 1.35;
      color: #222;
    }

    /* ──────── TABLE ──────── */
    table { width: 100%; border-collapse: collapse; margin-top: 4px; }
    th, td { padding: 7px 8px; vertical-align: top; }
    thead th {
      background: #0b5e7a;
      color: #fff;
      font-size: 9pt;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.04em;
      border: none;
      padding: 9px 8px;
    }
    thead th:first-child { border-radius: 6px 0 0 0; }
    thead th:last-child { border-radius: 0 6px 0 0; }
    tbody td {
      border-bottom: 1px solid #e8eaec;
      font-size: 10pt;
    }
    tbody tr:last-child td { border-bottom: none; }

    .group-row td {
      border-bottom: 1px solid #cfd3d7;
      background: #eef1f3;
      font-weight: 700;
      font-size: 10pt;
      padding-top: 11px;
      padding-bottom: 11px;
      color: #0b5e7a;
    }
    .right { text-align: right; }
    .muted { color: #777; font-size: 9pt; }
    .note { margin-top: 2px; }

    /* ──────── TOTALS ──────── */
    .totals-section {
      margin-top: 16px;
      display: flex;
      justify-content: flex-end;
    }
    .totals-box {
      width: 340px;
      border: 1px solid #d0d4d8;
      border-radius: 8px;
      overflow: hidden;
    }
    .totals-box table { margin: 0; }
    .totals-box td {
      padding: 8px 12px;
      border-bottom: 1px solid #eee;
      font-size: 10.5pt;
    }
    .totals-box tr:last-child td {
      border-bottom: none;
      border-top: 2px solid #0b5e7a;
      font-weight: 800;
      font-size: 11.5pt;
      background: #f4f8fa;
      padding: 10px 12px;
    }

    /* ──────── TEXT BLOCKS / CONDITIONS ──────── */
    .conditions { margin-top: 20px; }
    .conditions h3 {
      font-size: 10pt;
      font-weight: 600;
      color: #0b5e7a;
      text-transform: uppercase;
      letter-spacing: 0.04em;
      margin: 0 0 8px;
    }
    .condition-item {
      border-left: 3px solid #0b5e7a;
      padding: 7px 12px;
      margin: 6px 0;
      background: #fafbfc;
      font-size: 9.75pt;
      line-height: 1.4;
      color: #333;
    }

    /* ──────── SIGNATURE ──────── */
    .signature {
      margin-top: 32px;
      display: flex;
      gap: 40px;
    }
    .sig-block {
      flex: 1;
      border-top: 1px solid #999;
      padding-top: 6px;
      font-size: 9pt;
      color: #666;
    }
  </style>
</head>

<body>
  <!-- ─── COVER / HEADER ─── -->
  <div class="cover">
    <div class="cover-top">
      <div class="brand">
        {{ if LogoDataUri != "" }}
          <img class="logo" src="{{ LogoDataUri }}" />
        {{ end }}
        <div class="sender">{{ SenderBlock }}</div>
      </div>
      <div class="doc-meta">
        <div class="offer-label">Offerte</div>
        <div>Nr.: {{ OfferNo }}</div>
        <div>Datum: {{ DateText }}</div>
        {{ if ValidityText != "" }}<div>Gültig bis: {{ ValidityText }}</div>{{ end }}
      </div>
    </div>
  </div>

  <!-- ─── TITLE ─── -->
  <div class="title-section">
    <h1 class="title">{{ ProjectTitle }}</h1>
    {{ if VariantTitle != "" }}
      <p class="subtitle">{{ VariantTitle }}</p>
    {{ end }}
  </div>

  <!-- ─── INFO CARDS ─── -->
  <div class="info-row">
    <div class="info-card">
      <h4>Auftraggeber</h4>
      <div class="content">{{ CustomerBlock }}</div>
    </div>
    <div class="info-card">
      <h4>Objekt / Leitungsdaten</h4>
      <div class="content">{{ ObjectBlock }}</div>
    </div>
  </div>

  <!-- ─── POSITIONS TABLE ─── -->
  <table>
    <thead>
      <tr>
        <th style="width: 46%;">Position</th>
        <th class="right" style="width: 11%;">Menge</th>
        <th style="width: 10%;">Einheit</th>
        <th class="right" style="width: 16%;">Einzelpreis</th>
        <th class="right" style="width: 17%;">Total</th>
      </tr>
    </thead>
    <tbody>
      {{ current_group = "" }}
      {{ for line in Lines }}
        {{ if line.GroupLabel != current_group }}
          <tr class="group-row">
            <td colspan="5">{{ line.GroupLabel }}</td>
          </tr>
          {{ current_group = line.GroupLabel }}
        {{ end }}

        <tr>
          <td>
            <div>{{ line.Text }}</div>
            {{ if line.Note != "" }}<div class="muted note">{{ line.Note }}</div>{{ end }}
          </td>
          <td class="right">{{ line.QtyText }}</td>
          <td>{{ line.Unit }}</td>
          <td class="right">{{ line.UnitPriceText }}</td>
          <td class="right">{{ line.TotalText }}</td>
        </tr>
      {{ end }}
    </tbody>
  </table>

  <!-- ─── TOTALS ─── -->
  <div class="totals-section">
    <div class="totals-box">
      <table>
        <tr>
          <td>Zwischentotal (Netto)</td>
          <td class="right">{{ Totals.NetText }}</td>
        </tr>
        <tr>
          <td>{{ Totals.VatText | string.split ':' | array.first }}:</td>
          <td class="right">{{ Totals.VatText | string.split ':' | array.last }}</td>
        </tr>
        <tr>
          <td>Gesamttotal inkl. MwSt.</td>
          <td class="right">{{ Totals.GrossText }}</td>
        </tr>
      </table>
    </div>
  </div>

  <!-- ─── CONDITIONS ─── -->
  {{ if TextBlocks.size > 0 }}
    <div class="conditions">
      <h3>Bedingungen</h3>
      {{ for t in TextBlocks }}
        <div class="condition-item">{{ t }}</div>
      {{ end }}
    </div>
  {{ end }}

  <!-- ─── SIGNATURE ─── -->
  <div class="signature">
    <div class="sig-block">Ort, Datum</div>
    <div class="sig-block">Auftragnehmer</div>
    <div class="sig-block">Auftraggeber</div>
  </div>
</body>
</html>
