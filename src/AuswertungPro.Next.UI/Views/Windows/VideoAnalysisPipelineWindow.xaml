<Window x:Class="AuswertungPro.Next.UI.Views.Windows.VideoAnalysisPipelineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AuswertungPro.Next.UI.Views.Windows"
        Title="Video-Analyse" Height="720" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="#0A0C10"
        ResizeMode="CanResizeWithGrip"
        MinWidth="860" MinHeight="560">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Farben -->
        <SolidColorBrush x:Key="BgMain"       Color="#0A0C10"/>
        <SolidColorBrush x:Key="BgCard"       Color="#0F1218"/>
        <SolidColorBrush x:Key="BgCardHover"  Color="#161B24"/>
        <SolidColorBrush x:Key="Border1"      Color="#1A2030"/>
        <SolidColorBrush x:Key="TextPrimary"  Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextMuted"    Color="#475569"/>
        <SolidColorBrush x:Key="TextSub"      Color="#64748B"/>
        <SolidColorBrush x:Key="Accent"       Color="#6366F1"/>
        <SolidColorBrush x:Key="AccentLight"  Color="#A5B4FC"/>
        <SolidColorBrush x:Key="Green"        Color="#22C55E"/>
        <SolidColorBrush x:Key="Amber"        Color="#F59E0B"/>
        <SolidColorBrush x:Key="Red"          Color="#EF4444"/>

        <!-- Gemeinsame Styles -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background"       Value="#0F1218"/>
            <Setter Property="BorderBrush"      Value="#1A2030"/>
            <Setter Property="BorderThickness"  Value="1"/>
            <Setter Property="CornerRadius"     Value="10"/>
            <Setter Property="Padding"          Value="14"/>
        </Style>

        <Style x:Key="LabelSmall" TargetType="TextBlock">
            <Setter Property="FontSize"         Value="10"/>
            <Setter Property="FontWeight"       Value="SemiBold"/>
            <Setter Property="Foreground"       Value="#475569"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>

        <Style x:Key="ValueLarge" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
        </Style>

        <!-- Phase-Button -->
        <Style x:Key="PhaseCard" TargetType="Border">
            <Setter Property="Background"      Value="#0F1218"/>
            <Setter Property="BorderBrush"     Value="#1A2030"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius"    Value="8"/>
            <Setter Property="Padding"         Value="14,10"/>
        </Style>

        <!-- Primär-Button -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#3B82F6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground"   Value="White"/>
            <Setter Property="FontWeight"   Value="SemiBold"/>
            <Setter Property="FontSize"     Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"      Value="20,9"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="7" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Abbrechen-Button -->
        <Style x:Key="BtnCancel" TargetType="Button">
            <Setter Property="Background"   Value="#1A2030"/>
            <Setter Property="Foreground"   Value="#64748B"/>
            <Setter Property="FontSize"     Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush"  Value="#1E2840"/>
            <Setter Property="Padding"      Value="20,9"/>
            <Setter Property="Cursor"       Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="7" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Detection ListBox -->
        <Style x:Key="DetectionItem" TargetType="ListBoxItem">
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"         Value="0"/>
            <Setter Property="Margin"          Value="0,0,0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ProgressBar -->
        <Style x:Key="ThinProgress" TargetType="ProgressBar">
            <Setter Property="Height"          Value="4"/>
            <Setter Property="Background"      Value="#1A2030"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border CornerRadius="2" Background="{TemplateBinding Background}">
                            <Border x:Name="PART_Track">
                                <Border x:Name="PART_Indicator"
                                        CornerRadius="2"
                                        HorizontalAlignment="Left">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#6366F1" Offset="0"/>
                                            <GradientStop Color="#3B82F6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>   <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="56"/>   <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ── Header ── -->
        <Border Grid.Row="0" Background="#0A0C10"
                BorderBrush="#1A2030" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal"
                            VerticalAlignment="Center" Margin="0,0,16,0">
                    <Border Width="26" Height="26" CornerRadius="6" Margin="0,0,10,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6366F1" Offset="0"/>
                                <GradientStop Color="#3B82F6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="A" FontWeight="Black" FontSize="13"
                                   Foreground="White" HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="AuswertungPro" FontWeight="Bold" FontSize="14"
                               Foreground="#E2E8F0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Titel -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding PhaseLabel}"
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="#94A3B8"/>
                    <TextBlock Text=" — " Foreground="#1A2030" FontSize="13"/>
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="12" Foreground="#64748B"
                               MaxWidth="400" TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Meter Badge -->
                <Border Grid.Column="2" CornerRadius="6" Padding="10,4"
                        VerticalAlignment="Center"
                        Background="#0F1218" BorderBrush="#1A2030" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="● " Foreground="#6366F1" FontSize="8"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding VideoPhaseActive,
                                       Converter={StaticResource BoolToVis}}"/>
                        <TextBlock FontFamily="Consolas" FontSize="12"
                                   Foreground="#A5B4FC">
                            <Run Text="Meter "/>
                            <Run Text="{Binding CurrentMeter}" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ── Content ── -->
        <Grid Grid.Row="1" Margin="16,12,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Linke Spalte -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Phase-Karten -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>  <!-- Meter-Timeline -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>  <!-- Statistiken -->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>  <!-- Warnungen -->
                </Grid.RowDefinitions>

                <!-- Phase-Karten -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Phase 1: Video-Analyse -->
                    <Border Grid.Column="0" Style="{StaticResource PhaseCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Row="0">
                                <TextBlock Style="{StaticResource LabelSmall}" Text="VIDEO-ANALYSE"/>
                                <TextBlock HorizontalAlignment="Right" FontSize="12"
                                           Text="✓" Foreground="#22C55E"
                                           Visibility="{Binding VideoPhaseDone,
                                               Converter={StaticResource BoolToVis}}"/>
                                <TextBlock HorizontalAlignment="Right" FontSize="8"
                                           Text="●" Foreground="#6366F1"
                                           Visibility="{Binding VideoPhaseActive,
                                               Converter={StaticResource BoolToVis}}"/>
                            </DockPanel>
                            <ProgressBar Grid.Row="2"
                                         Style="{StaticResource ThinProgress}"
                                         Value="{Binding VideoProgressPct}"
                                         Maximum="100"/>
                            <TextBlock Grid.Row="4" FontSize="11" Foreground="#64748B">
                                <Run Text="{Binding FramesAnalyzed}"/>
                                <Run Text=" / "/>
                                <Run Text="{Binding TotalFrames}"/>
                                <Run Text=" Frames"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Phase 2: Code-Mapping -->
                    <Border Grid.Column="2" Style="{StaticResource PhaseCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Row="0">
                                <TextBlock Style="{StaticResource LabelSmall}" Text="CODE-MAPPING"/>
                                <TextBlock HorizontalAlignment="Right" FontSize="12"
                                           Text="✓" Foreground="#22C55E"
                                           Visibility="{Binding MappingPhaseDone,
                                               Converter={StaticResource BoolToVis}}"/>
                            </DockPanel>
                            <ProgressBar Grid.Row="2"
                                         Style="{StaticResource ThinProgress}"
                                         Value="{Binding MappingProgressPct}"
                                         Maximum="100"/>
                            <TextBlock Grid.Row="4" FontSize="11" Foreground="#64748B">
                                <Run Text="{Binding DetectionCount}"/>
                                <Run Text=" Einträge gemappt"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Phase 3: Protokoll -->
                    <Border Grid.Column="4" Style="{StaticResource PhaseCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Row="0">
                                <TextBlock Style="{StaticResource LabelSmall}" Text="PROTOKOLL"/>
                                <TextBlock HorizontalAlignment="Right" FontSize="12"
                                           Text="✓" Foreground="#22C55E"
                                           Visibility="{Binding IsDone,
                                               Converter={StaticResource BoolToVis}}"/>
                            </DockPanel>
                            <ProgressBar Grid.Row="2"
                                         Style="{StaticResource ThinProgress}">
                                <ProgressBar.Value>
                                    <Binding Path="IsDone">
                                        <Binding.Converter>
                                            <local:BoolToDoubleConverter TrueValue="100" FalseValue="0"/>
                                        </Binding.Converter>
                                    </Binding>
                                </ProgressBar.Value>
                            </ProgressBar>
                            <TextBlock Grid.Row="4" FontSize="11" Foreground="#64748B">
                                <Run Text="{Binding HighConfidenceCount}"/>
                                <Run Text=" hohe Konfidenz"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Meter-Timeline -->
                <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="14,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="32"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource LabelSmall}"
                                   Text="METER-TIMELINE"/>

                        <!-- Canvas für Timeline -->
                        <Canvas Grid.Row="2" x:Name="TimelineCanvas" Height="32"
                                Background="Transparent"
                                ClipToBounds="True">
                            <!-- Hintergrundlinie -->
                            <Border Canvas.Top="10" Height="6" CornerRadius="3"
                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                                    Background="#1A2030"/>
                            <!-- Fortschrittsbalken (gebunden via Code-Behind oder Converter) -->
                            <!-- Marker werden per ItemsControl eingeblendet -->
                            <ItemsControl ItemsSource="{Binding Detections}"
                                          Canvas.Top="0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Einfacher Marker-Punkt, Position via Converter -->
                                        <Border Width="6" Height="18" CornerRadius="3"
                                                 ToolTip="{Binding Label}">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding SeverityColor}"/>
                                            </Border.Background>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- Statistiken -->
                <Border Grid.Row="4" Style="{StaticResource CardBorder}" Padding="14,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource LabelSmall}" Text="FRAMES"/>
                            <TextBlock Style="{StaticResource ValueLarge}"
                                       FontSize="20" Text="{Binding FramesAnalyzed}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource LabelSmall}" Text="SCHÄDEN"/>
                            <TextBlock Style="{StaticResource ValueLarge}"
                                       FontSize="20" Text="{Binding DetectionCount}"
                                       Foreground="#A5B4FC"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Style="{StaticResource LabelSmall}" Text="HOHE KONF."/>
                            <TextBlock Style="{StaticResource ValueLarge}"
                                       FontSize="20" Text="{Binding HighConfidenceCount}"
                                       Foreground="#22C55E"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Style="{StaticResource LabelSmall}" Text="STATUS"/>
                            <TextBlock FontSize="12" FontWeight="SemiBold" Margin="0,4,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text"      Value="Läuft"/>
                                        <Setter Property="Foreground" Value="#6366F1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                <Setter Property="Text"      Value="Fertig ✓"/>
                                                <Setter Property="Foreground" Value="#22C55E"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                                <Setter Property="Text"      Value="Fehler"/>
                                                <Setter Property="Foreground" Value="#EF4444"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Fehlermeldung -->
                <Border Grid.Row="6" CornerRadius="8" Padding="12,8" Margin="0,4,0,0"
                        Background="#EF444410" BorderBrush="#EF444430" BorderThickness="1"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                    <TextBlock Foreground="#FCA5A5" FontSize="12"
                               Text="{Binding ErrorText}" TextWrapping="Wrap"/>
                </Border>
            </Grid>

            <!-- Rechte Spalte: Live-Feed -->
            <Border Grid.Column="2" Style="{StaticResource CardBorder}" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <TextBlock Style="{StaticResource LabelSmall}" Text="ERKANNTE SCHÄDEN"/>
                        <Border HorizontalAlignment="Right" CornerRadius="10" Padding="6,1"
                                Background="#6366F115">
                            <TextBlock FontSize="11" FontWeight="Bold" Foreground="#A5B4FC"
                                       Text="{Binding DetectionCount}"/>
                        </Border>
                    </DockPanel>

                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding Detections}"
                             ItemContainerStyle="{StaticResource DetectionItem}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             VirtualizingPanel.ScrollUnit="Pixel">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,5" CornerRadius="7" Padding="10,8"
                                        Background="#161B24"
                                        BorderThickness="1">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="{Binding SeverityColor}" Opacity="0.2"/>
                                    </Border.BorderBrush>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Titel-Zeile -->
                                        <DockPanel Grid.Row="0">
                                            <TextBlock Text="{Binding Label}"
                                                       FontSize="12" FontWeight="SemiBold"
                                                       Foreground="#CBD5E1"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="160"/>
                                            <!-- Code-Badge -->
                                            <Border HorizontalAlignment="Right"
                                                    CornerRadius="4" Padding="5,1"
                                                    Background="#6366F115">
                                                <TextBlock Text="{Binding Code}"
                                                           FontFamily="Consolas" FontSize="10"
                                                           FontWeight="Bold" Foreground="#A5B4FC"/>
                                            </Border>
                                        </DockPanel>

                                        <!-- Meter + Konfidenz -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       FontFamily="Consolas" FontSize="10"
                                                       Foreground="#475569"
                                                       Text="{Binding MeterRange}"/>

                                            <!-- Konfidenz-Bar -->
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <ProgressBar Width="44" Height="3"
                                                             Background="#1A2030"
                                                             BorderThickness="0"
                                                             Maximum="1"
                                                             Value="{Binding Confidence}">
                                                    <ProgressBar.Foreground>
                                                        <SolidColorBrush Color="{Binding SeverityColor}"/>
                                                    </ProgressBar.Foreground>
                                                </ProgressBar>
                                                <TextBlock Margin="5,0,0,0"
                                                           FontFamily="Consolas" FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="{Binding SeverityColor}"
                                                           Text="{Binding ConfidencePct}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- ── Footer ── -->
        <Border Grid.Row="2" Background="#0A0C10"
                BorderBrush="#1A2030" BorderThickness="0,1,0,0">
            <Grid Margin="16,0">
                <!-- Stats links -->
                <TextBlock VerticalAlignment="Center" FontSize="11"
                           Foreground="#334155" FontFamily="Consolas"
                           Text="{Binding StatsText}"/>

                <!-- Buttons rechts -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Center" Margin="0,0,0,0">
                    <Button Style="{StaticResource BtnCancel}"
                            Content="Abbrechen" Margin="0,0,8,0"
                            Click="Cancel_Click"/>
                    <Button x:Name="AcceptButton"
                            Style="{StaticResource BtnPrimary}"
                            Content="Protokoll übernehmen"
                            IsEnabled="{Binding IsDone}"
                            Click="Accept_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
