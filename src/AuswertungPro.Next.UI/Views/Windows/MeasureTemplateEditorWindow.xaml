<Window x:Class="AuswertungPro.Next.UI.Views.Windows.MeasureTemplateEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Maßnahmen bearbeiten" 
        Height="800" Width="1600" 
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Template List -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock DockPanel.Dock="Top" Text="Vordefinierte Maßnahmen" 
                       FontWeight="Bold" Margin="0,0,0,8"/>
            
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                <Button Command="{Binding NewTemplateCommand}" Content="Neu" Width="80" Margin="0,0,6,0"/>
                <Button Command="{Binding DeleteTemplateCommand}" Content="Löschen" Width="80"/>
            </StackPanel>

            <ListBox ItemsSource="{Binding Templates}" 
                     SelectedItem="{Binding SelectedTemplate}"
                     DisplayMemberPath="Name"/>
        </DockPanel>

        <!-- Middle: Available Prices -->
        <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="Transparent" ResizeBehavior="PreviousAndNext"/>

        <DockPanel Grid.Column="2" Margin="0,0,10,0">
            <TextBlock DockPanel.Dock="Top" Text="Verfügbare Positionen (aus Preiskatalog)" 
                       FontWeight="Bold" Margin="0,0,0,8"/>
            
            <TextBox DockPanel.Dock="Top" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,8" VerticalContentAlignment="Center"
                     Height="28">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="Suchen..." Foreground="{StaticResource MutedBrush}" Margin="4,0,0,0"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="+ Position" Width="110" Margin="0,0,6,0"
                        Command="{Binding AddCatalogItemCommand}"/>
                <Button Content="✕ Löschen" Width="110" Margin="0,0,6,0"
                        Command="{Binding RemoveCatalogItemCommand}"/>
                <Button Content="Positionen speichern" Width="150"
                        Command="{Binding SaveCatalogCommand}"/>
            </StackPanel>

            <DataGrid x:Name="AvailablePricesGrid"
                      ItemsSource="{Binding AvailablePrices}" 
                      SelectedItem="{Binding SelectedAvailablePrice}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      IsReadOnly="False"
                      PreviewMouseLeftButtonDown="AvailablePrices_PreviewMouseLeftButtonDown"
                      MouseMove="AvailablePrices_MouseMove"
                      MouseDoubleClick="PriceItem_DoubleClick"
                      HeadersVisibility="Column" 
                      RowHeaderWidth="0">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsVisible}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id, UpdateSourceTrigger=PropertyChanged}" Width="140"/>
                    <DataGridTextColumn Header="Gruppe" Binding="{Binding Group, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                    <DataGridTextColumn Header="Position" Binding="{Binding Label, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                    <DataGridTextColumn Header="Einheit" Binding="{Binding Unit, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                    <DataGridTextColumn Header="Preis" Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Right: Template Editor -->
        <GridSplitter Grid.Column="3" Width="6" HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="Transparent" ResizeBehavior="PreviousAndNext"/>

        <DockPanel Grid.Column="4">
            <TextBlock DockPanel.Dock="Top" Text="Template bearbeiten" 
                       FontWeight="Bold" Margin="0,0,0,8"/>

            <Grid DockPanel.Dock="Top" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TemplateId}" Margin="0,0,0,6"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TemplateName}" Margin="0,0,0,6"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Beschreibung:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TemplateDescription}" Margin="0,0,0,6"/>

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,6,0,0">
                    <Button Command="{Binding SaveTemplateCommand}" Content="Template speichern" Width="150" Margin="0,0,6,0"/>
                    <Button Command="{Binding DeleteLineCommand}" Content="Zeile löschen" Width="120" Margin="0,0,6,0"/>
                    <Button Command="{Binding MoveLineUpCommand}" Content="↑" Width="40" Margin="0,0,6,0"/>
                    <Button Command="{Binding MoveLineDownCommand}" Content="↓" Width="40"/>
                </StackPanel>
            </Grid>

            <TextBlock DockPanel.Dock="Top" Text="Positionen (Doppelklick links zum Hinzufügen)" 
                       Margin="0,0,0,6" Foreground="{StaticResource TextSecondaryBrush}"/>

            <DataGrid x:Name="TemplateLinesGrid"
                      ItemsSource="{Binding CurrentLines}" 
                      SelectedItem="{Binding SelectedLine}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      HeadersVisibility="Column"
                      AllowDrop="True"
                      Drop="TemplateLines_Drop"
                      DragOver="TemplateLines_DragOver"
                      RowHeaderWidth="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Gruppe" Binding="{Binding Group}" Width="120"/>
                    <DataGridTextColumn Header="Position" Binding="{Binding Label}" Width="*"/>
                    <DataGridTextColumn Header="Einheit" Binding="{Binding Unit}" Width="70"/>
                    <DataGridTextColumn Header="Menge (qty)" Binding="{Binding Qty}" Width="140"/>
                    <DataGridTextColumn Header="ItemRef" Binding="{Binding ItemRef}" Width="180"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
