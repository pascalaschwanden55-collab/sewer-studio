<Window x:Class="AuswertungPro.Next.UI.Views.Windows.ObservationCatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:AuswertungPro.Next.UI.Views.Controls"
        Title="SN EN 13508-2 Beobachtungskatalog fÃ¼r Haltungen &amp; Leitungen"
        Width="1200"
        Height="720"
        MinWidth="1000"
        MinHeight="620"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <x:Array x:Key="ClockPositions" Type="{x:Type sys:String}"
                 xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:String>00</sys:String>
            <sys:String>01</sys:String>
            <sys:String>02</sys:String>
            <sys:String>03</sys:String>
            <sys:String>04</sys:String>
            <sys:String>05</sys:String>
            <sys:String>06</sys:String>
            <sys:String>07</sys:String>
            <sys:String>08</sys:String>
            <sys:String>09</sys:String>
            <sys:String>10</sys:String>
            <sys:String>11</sys:String>
            <sys:String>12</sys:String>
        </x:Array>
        <x:Array x:Key="EzOptions" Type="{x:Type sys:String}"
                 xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:String>EZ0</sys:String>
            <sys:String>EZ1</sys:String>
            <sys:String>EZ2</sys:String>
            <sys:String>EZ3</sys:String>
            <sys:String>EZ4</sys:String>
        </x:Array>
    </Window.Resources>
    <Grid Margin="6" Background="#E6E6E6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Links: Suche + Code-Liste -->
        <Grid Grid.Column="0" Grid.RowSpan="2" Margin="0,0,6,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Suchen" Margin="2,0,0,4"/>
            <TextBox Grid.Row="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>
            <ListView Grid.Row="2"
                      x:Name="SearchList"
                      ItemsSource="{Binding FilteredCodes}"
                      SelectionChanged="SearchList_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Code" Width="70" DisplayMemberBinding="{Binding Code}"/>
                        <GridViewColumn Header="Text" Width="220" DisplayMemberBinding="{Binding Title}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <TextBlock Grid.Column="1" Grid.Row="0" Text="Beobachtung" FontWeight="SemiBold" Margin="4,2,0,6"/>
        <!-- Mitte: Kaskaden-Navigation -->
        <Border Grid.Column="1" Grid.Row="1" BorderBrush="#8A8A8A" BorderThickness="1" Background="#CFCFCF">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Columns}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ListBox ItemsSource="{Binding Items}"
                                     SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                     SelectionChanged="Column_SelectionChanged"
                                     Width="220"
                                     Margin="0,0,2,0"
                                     Background="#EFEFEF"
                                     BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Label}" TextWrapping="Wrap" Margin="4,2"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Rechts: Parameter -->
        <Grid Grid.Column="2" Grid.Row="1" Margin="6,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="{Binding CodeTitle}" FontSize="16" FontWeight="SemiBold" Foreground="#1F4E9E" Margin="0,0,0,6"/>
                <TextBlock Text="{Binding CodeDescription}" Foreground="#444" TextWrapping="Wrap" Margin="0,0,0,10"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Parameters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                <ComboBox ItemsSource="{Binding AllowedValues}"
                                          Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                          IsEditable="True"
                                          Visibility="{Binding IsEnum, Converter={StaticResource BoolToVis}}"/>
                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#FFF6A8">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEnum}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsClock}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <!-- Clock -->
                                <StackPanel Visibility="{Binding IsClock, Converter={StaticResource BoolToVis}}">
                                    <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,6"/>
                                    <Border Background="#FFF6A8" BorderBrush="#B6A400" BorderThickness="1" Padding="4" Margin="0,0,0,6">
                                        <controls:ClockPickerControl Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding UnitSuffix}" Foreground="{StaticResource MutedBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <GroupBox Grid.Row="2" Header="VSA-KEK (Kanalschaden)" Margin="0,8,0,0">
                <Grid Margin="8,6,8,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,8">
                        <TextBlock Text="Distanz (m)" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding VsaDistanz, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                        <TextBlock Text="Uhrzeit (Video)" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding VsaVideo, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,8">
                        <TextBlock Text="Uhrzeit von" TextWrapping="Wrap"/>
                        <ComboBox ItemsSource="{StaticResource ClockPositions}"
                                  IsEditable="True"
                                  Text="{Binding VsaUhrVon, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4"/>
                        <Border Background="#FFF6A8" BorderBrush="#B6A400" BorderThickness="1" Padding="4">
                            <controls:ClockPickerControl Width="110"
                                                         Height="110"
                                                         Value="{Binding VsaUhrVon, UpdateSourceTrigger=PropertyChanged}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                        <TextBlock Text="Uhrzeit bis" TextWrapping="Wrap"/>
                        <ComboBox ItemsSource="{StaticResource ClockPositions}"
                                  IsEditable="True"
                                  Text="{Binding VsaUhrBis, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4"/>
                        <Border Background="#FFF6A8" BorderBrush="#B6A400" BorderThickness="1" Padding="4">
                            <controls:ClockPickerControl Width="110"
                                                         Height="110"
                                                         Value="{Binding VsaUhrBis, UpdateSourceTrigger=PropertyChanged}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,12,8">
                        <TextBlock Text="Quantifizierung 1" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding VsaQ1, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
                        <TextBlock Text="Quantifizierung 2" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding VsaQ2, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,12,8">
                        <TextBlock Text="Strecke" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding VsaStrecke, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
                        <TextBlock Text="Verbindung" TextWrapping="Wrap"/>
                        <CheckBox IsChecked="{Binding VsaVerbindung}" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,12,8">
                        <TextBlock Text="Ansicht" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding VsaAnsicht, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,0,0,8">
                        <TextBlock Text="EZ / Bereich" TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Width="70"
                                      ItemsSource="{StaticResource EzOptions}"
                                      IsEditable="True"
                                      Text="{Binding VsaEz, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,6,0"/>
                            <TextBox Width="90"
                                     Text="{Binding VsaSchachtbereich, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#FFF6A8"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                        <TextBlock Text="Diverses" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding VsaAnmerkung, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <TextBlock Grid.Row="3" Text="{Binding ValidationMessage}" Foreground="OrangeRed" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ApplyButton" Content="Uebernehmen" Width="120" Margin="0,0,8,0"/>
            <Button x:Name="CancelButton" Content="Abbrechen" Width="120" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
