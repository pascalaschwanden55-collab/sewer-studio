<Window x:Class="AuswertungPro.Next.UI.Views.Windows.VideoAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KI Videoanalyse" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#0A0C10"
        ResizeMode="CanResizeWithGrip"
        MinWidth="760" MinHeight="520">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Primär-Button -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#3B82F6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontWeight"      Value="SemiBold"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"         Value="18,8"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="7" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Sekundär-Button -->
        <Style x:Key="BtnSecondary" TargetType="Button">
            <Setter Property="Background"      Value="#1A2030"/>
            <Setter Property="Foreground"      Value="#94A3B8"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush"     Value="#1E2840"/>
            <Setter Property="Padding"         Value="18,8"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="7" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ProgressBar slim -->
        <Style x:Key="SlimProgress" TargetType="ProgressBar">
            <Setter Property="Height"          Value="4"/>
            <Setter Property="Background"      Value="#1A2030"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border CornerRadius="2" Background="{TemplateBinding Background}">
                            <Border x:Name="PART_Track">
                                <Border x:Name="PART_Indicator" CornerRadius="2"
                                        HorizontalAlignment="Left">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#6366F1" Offset="0"/>
                                            <GradientStop Color="#3B82F6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background"               Value="Transparent"/>
            <Setter Property="Foreground"               Value="#CBD5E1"/>
            <Setter Property="BorderThickness"          Value="0"/>
            <Setter Property="GridLinesVisibility"      Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#1A2030"/>
            <Setter Property="RowBackground"            Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#0F1218"/>
            <Setter Property="ColumnHeaderHeight"       Value="32"/>
            <Setter Property="FontSize"                 Value="12"/>
            <Setter Property="SelectionMode"            Value="Single"/>
            <Setter Property="AutoGenerateColumns"      Value="False"/>
            <Setter Property="CanUserAddRows"           Value="False"/>
            <Setter Property="CanUserDeleteRows"        Value="False"/>
            <Setter Property="IsReadOnly"               Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background"      Value="#0A0C10"/>
            <Setter Property="Foreground"      Value="#475569"/>
            <Setter Property="FontSize"        Value="10"/>
            <Setter Property="FontWeight"      Value="SemiBold"/>
            <Setter Property="Padding"         Value="8,0"/>
            <Setter Property="BorderBrush"     Value="#1A2030"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Padding"          Value="8,4"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>   <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Video-Selector -->
            <RowDefinition Height="Auto"/> <!-- Fortschritt -->
            <RowDefinition Height="*"/>    <!-- Ergebnistabelle -->
            <RowDefinition Height="Auto"/> <!-- Fehler -->
            <RowDefinition Height="56"/>   <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ── Header ── -->
        <Border Grid.Row="0" Background="#0A0C10"
                BorderBrush="#1A2030" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="26" Height="26" CornerRadius="6" Margin="0,0,10,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6366F1" Offset="0"/>
                                <GradientStop Color="#3B82F6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="AI" FontWeight="Black" FontSize="10"
                                   Foreground="White" HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="KI Videoanalyse" FontWeight="Bold" FontSize="14"
                               Foreground="#E2E8F0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Status rechts -->
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"
                           FontSize="12" Foreground="#475569"
                           Text="{Binding StatusText}"
                           MaxWidth="500" TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>

        <!-- ── Video-Selector ── -->
        <Border Grid.Row="1" Margin="16,12,16,0"
                Background="#0F1218" BorderBrush="#1A2030"
                BorderThickness="1" CornerRadius="8" Padding="14,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="VIDEO  " VerticalAlignment="Center"
                           FontSize="10" FontWeight="SemiBold" Foreground="#475569"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="12"
                           Foreground="#94A3B8" TextTrimming="CharacterEllipsis"
                           Text="{Binding VideoPath}"/>

                <Button Grid.Column="2" Content="Auswählen..."
                        Command="{Binding PickVideoCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource BtnSecondary}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock Grid.Column="4" Text="m Start" VerticalAlignment="Center"
                           FontSize="10" Foreground="#475569"/>
                <TextBox   Grid.Column="6"
                           Text="{Binding MeterStart, UpdateSourceTrigger=PropertyChanged}"
                           Background="#161B24" Foreground="#CBD5E1"
                           BorderBrush="#1A2030" BorderThickness="1"
                           Padding="6,4" FontSize="12"/>

                <TextBlock Grid.Column="8" Text="m Ende" VerticalAlignment="Center"
                           FontSize="10" Foreground="#475569"/>
                <TextBox   Grid.Column="10"
                           Text="{Binding MeterEnd, UpdateSourceTrigger=PropertyChanged}"
                           Background="#161B24" Foreground="#CBD5E1"
                           BorderBrush="#1A2030" BorderThickness="1"
                           Padding="6,4" FontSize="12"/>
            </Grid>
        </Border>

        <!-- ── Fortschritt ── -->
        <Border Grid.Row="2" Margin="16,8,16,0"
                Background="#0F1218" BorderBrush="#1A2030"
                BorderThickness="1" CornerRadius="8" Padding="14,10"
                Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0">
                    <TextBlock Text="FORTSCHRITT" FontSize="10" FontWeight="SemiBold"
                               Foreground="#475569"/>
                    <TextBlock HorizontalAlignment="Right" FontFamily="Consolas"
                               FontSize="11" Foreground="#6366F1">
                        <Run Text="{Binding FramesDone}"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding FramesTotal}"/>
                        <Run Text=" Frames"/>
                    </TextBlock>
                </DockPanel>

                <ProgressBar Grid.Row="2" Style="{StaticResource SlimProgress}"
                             Value="{Binding ProgressPct}" Maximum="100"/>
            </Grid>
        </Border>

        <!-- ── Ergebnistabelle ── -->
        <Border Grid.Row="3" Margin="16,8,16,0"
                Background="#0F1218" BorderBrush="#1A2030"
                BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="14,10,14,6">
                    <TextBlock Text="ERKANNTE BEOBACHTUNGEN" FontSize="10"
                               FontWeight="SemiBold" Foreground="#475569"
                               VerticalAlignment="Center"/>
                    <Border HorizontalAlignment="Right" CornerRadius="10" Padding="6,1"
                            Background="#6366F115" VerticalAlignment="Center">
                        <TextBlock FontSize="11" FontWeight="Bold" Foreground="#A5B4FC"
                                   Text="{Binding Observations.Count}"/>
                    </Border>
                </DockPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Observations}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CODE"        Width="64"
                                            Binding="{Binding VsaCode}"/>
                        <DataGridTextColumn Header="BEZEICHNUNG" Width="140"
                                            Binding="{Binding Label}"/>
                        <DataGridTextColumn Header="m START"     Width="68"
                                            Binding="{Binding MeterStart, StringFormat=F2}"/>
                        <DataGridTextColumn Header="m ENDE"      Width="68"
                                            Binding="{Binding MeterEnd,   StringFormat=F2}"/>
                        <DataGridTextColumn Header="PROTOKOLLTEXT" Width="*"
                                            Binding="{Binding Text}"/>
                        <DataGridTextColumn Header="KONF."       Width="72"
                                            Binding="{Binding Confidence.Overall, StringFormat=P0}"/>
                        <DataGridTextColumn Header="FLAGS"       Width="64"
                                            Binding="{Binding ValidationFlags.Count}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- ── Fehler ── -->
        <Border Grid.Row="4" Margin="16,6,16,0"
                CornerRadius="8" Padding="12,8"
                Background="#EF444410" BorderBrush="#EF444430" BorderThickness="1"
                Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
            <TextBlock Foreground="#FCA5A5" FontSize="12"
                       Text="{Binding ErrorText}" TextWrapping="Wrap"/>
        </Border>

        <!-- ── Footer ── -->
        <Border Grid.Row="5" Background="#0A0C10"
                BorderBrush="#1A2030" BorderThickness="0,1,0,0">
            <Grid Margin="16,0">
                <TextBlock VerticalAlignment="Center" FontSize="11"
                           Foreground="#334155" FontFamily="Consolas"
                           Text="{Binding StatusText}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Content="Abbrechen" Style="{StaticResource BtnSecondary}"
                            Margin="0,0,8,0" Click="Cancel_Click"/>
                    <Button x:Name="AcceptButton"
                            Content="Ergebnisse übernehmen"
                            Style="{StaticResource BtnPrimary}"
                            IsEnabled="{Binding IsDone}"
                            Click="Accept_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
