<Window x:Class="AuswertungPro.Next.UI.Views.Windows.MeasureSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Maßnahmen auswählen" 
        Height="520" Width="860" 
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Width="120" Margin="0,0,6,0" 
                    Click="Ok_Click" IsDefault="True"/>
            <Button Content="Abbrechen" Width="120" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Rows}"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  SelectionMode="Extended"
                  HeadersVisibility="Column" 
                  RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Auswahl" Binding="{Binding IsSelected}" Width="70"/>
                <DataGridTextColumn Header="Maßnahme" Binding="{Binding Name}" Width="240" IsReadOnly="True"/>
                <DataGridTextColumn Header="Beschreibung" Binding="{Binding Description}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="id" Binding="{Binding Id}" Width="140" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
