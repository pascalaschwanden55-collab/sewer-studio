<Window x:Class="AuswertungPro.Next.UI.Views.Windows.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="Video" Width="1100" Height="700" MinWidth="860" MinHeight="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="8,8,8,0" BorderBrush="#22000000" BorderThickness="1" Background="#FF000000">
            <vlc:VideoView x:Name="VideoView" />
        </Border>

        <Grid Grid.Row="1" Margin="8,8,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="CurrentTimeText" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Text="00:00"/>

            <Slider x:Name="PositionSlider"
                    Grid.Column="1"
                    Minimum="0"
                    Maximum="1000"
                    IsMoveToPointEnabled="True"
                    ValueChanged="PositionSlider_ValueChanged"/>

            <TextBlock x:Name="DurationText" Grid.Column="2" Margin="10,0,0,0" VerticalAlignment="Center" Text="00:00"/>
        </Grid>

        <WrapPanel Grid.Row="2" Margin="8,8,8,8" VerticalAlignment="Center">
            <Button Content="Play" Width="72" Margin="0,0,6,0" Click="Play_Click"/>
            <Button Content="Pause" Width="72" Margin="0,0,6,0" Click="Pause_Click"/>
            <Button Content="Stop" Width="72" Margin="0,0,12,0" Click="Stop_Click"/>

            <Button Content="0.5x" Width="60" Margin="0,0,6,0" Click="Speed05_Click"/>
            <Button Content="1x" Width="56" Margin="0,0,6,0" Click="Speed1_Click"/>
            <Button Content="1.5x" Width="60" Margin="0,0,6,0" Click="Speed15_Click"/>
            <Button Content="2x" Width="56" Margin="0,0,6,0" Click="Speed2_Click"/>
            <Button Content="4x" Width="56" Margin="0,0,6,0" Click="Speed4_Click"/>
            <Button Content="8x" Width="56" Margin="0,0,12,0" Click="Speed8_Click"/>

            <TextBlock Text="Rate:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBlock x:Name="RateText" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,16,0" Text="1.00x"/>

            <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource MutedBrush}" Text="Hotkeys: +/- Speed, Left/Right = 5s, Space = Pause"/>
        </WrapPanel>
    </Grid>
</Window>