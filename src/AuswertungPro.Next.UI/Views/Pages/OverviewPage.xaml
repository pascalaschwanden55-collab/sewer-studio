<UserControl x:Class="AuswertungPro.Next.UI.Views.Pages.OverviewPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,16">
            <TextBlock Text="Projektuebersicht" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
            <TextBlock Text="Projekt oeffnen oder neues Projekt anlegen" Margin="0,4,0,0" Foreground="{StaticResource MutedBrush}"/>
            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <Button Content="Neues Projekt" Command="{Binding NewCommand}"/>
                <Button Content="Projekt oeffnen" Command="{Binding OpenCommand}" Margin="8,0,0,0" Style="{StaticResource SecondaryButton}"/>
                <Button Content="Letztes Projekt fortsetzen" Command="{Binding ContinueCommand}" Margin="8,0,0,0" Style="{StaticResource SecondaryButton}"/>
                <Button Content="Aktualisieren" Command="{Binding RefreshCommand}" Margin="8,0,0,0" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- ProjektÃ¼bersichtsliste -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Alle Projekte" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                    <ListBox ItemsSource="{Binding ProjectEntries}"
                             SelectedItem="{Binding SelectedProjectEntry, Mode=TwoWay}"
                             MinHeight="200"
                             Height="350"
                             MouseDoubleClick="ProjectListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,4">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Description}" FontStyle="Italic" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding ModifiedAtDisplay}" FontSize="11" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Text="{Binding Path}" FontSize="10" Foreground="{StaticResource MutedBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Ausgewaehltes oeffnen" Command="{Binding OpenSelectedCommand}" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Ausgewaehltes loeschen" Command="{Binding DeleteSelectedCommand}" Margin="8,0,0,0" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Projektinfo wie bisher -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Projektinfo" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                    <Border Margin="0,10,0,0"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="{StaticResource CardBrush}">
                        <StackPanel>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Status" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding ProjectStatus}" Foreground="{StaticResource TextBrush}"/>
                                </Grid>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Name" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Project.Name}" Foreground="{StaticResource TextBrush}"/>
                                </Grid>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Beschreibung" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Project.Description}" TextWrapping="Wrap"
                                               Foreground="{StaticResource TextBrush}"/>
                                </Grid>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Records" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Project.Data.Count, StringFormat={}{0}}"
                                               Foreground="{StaticResource TextBrush}"/>
                                </Grid>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Zuletzt gespeichert" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Project.ModifiedAtUtc, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                               Foreground="{StaticResource TextBrush}"/>
                                </Grid>
                            </Border>
                            <Border Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="170"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Letzter Speicherort" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding LastProjectPath, TargetNullValue=-}"
                                               TextWrapping="Wrap" Foreground="{StaticResource TextBrush}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
