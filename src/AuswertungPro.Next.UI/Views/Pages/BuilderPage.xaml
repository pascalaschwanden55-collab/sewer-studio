<UserControl x:Class="AuswertungPro.Next.UI.Views.Pages.BuilderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Style="{StaticResource Card}"
                Padding="14"
                Margin="0,0,0,10">
            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Druckcenter"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource NeonCyanBrush}"/>
                    <TextBlock Text="Filterbarer Ausdruck mit Kosten-, Eigentuemer- und Positionszusammenfassung"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Content="Aktualisieren"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="Filter zuruecksetzen"
                            Command="{Binding ResetFiltersCommand}"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1"
                Style="{StaticResource Card}"
                Padding="14"
                Margin="0,0,0,10">
            <StackPanel>
                <WrapPanel Margin="0,0,0,8">
                    <StackPanel Width="260"
                                Margin="0,0,10,8">
                        <TextBlock Text="Suche"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Width="180"
                                Margin="0,0,10,8">
                        <TextBlock Text="Eigentuemer"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding OwnerFilterOptions}"
                                  SelectedItem="{Binding SelectedOwnerFilter, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Width="180"
                                Margin="0,0,10,8">
                        <TextBlock Text="Ausgefuehrt durch"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding ExecutedByFilterOptions}"
                                  IsEditable="True"
                                  IsTextSearchEnabled="False"
                                  Text="{Binding SelectedExecutedByFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Width="150"
                                Margin="0,0,10,8">
                        <TextBlock Text="Sanieren"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding SanierenFilterOptions}"
                                  SelectedItem="{Binding SelectedSanierenFilter, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Width="170"
                                Margin="0,0,10,8">
                        <TextBlock Text="Material"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding MaterialFilterOptions}"
                                  SelectedItem="{Binding SelectedMaterialFilter, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Width="160"
                                Margin="0,0,10,8">
                        <TextBlock Text="Status"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding StatusFilterOptions}"
                                  SelectedItem="{Binding SelectedStatusFilter, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Width="120"
                                Margin="0,0,10,8">
                        <TextBlock Text="Jahr"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding YearFilterOptions}"
                                  SelectedItem="{Binding SelectedYearFilter, Mode=TwoWay}"/>
                    </StackPanel>
                </WrapPanel>

                <WrapPanel Margin="0,0,0,8">
                    <CheckBox Content="Nur mit Kosten"
                              IsChecked="{Binding OnlyWithCost, Mode=TwoWay}"
                              Margin="0,0,16,0"/>
                    <CheckBox Content="Nur mit Massnahmen"
                              IsChecked="{Binding OnlyWithMeasures, Mode=TwoWay}"/>
                </WrapPanel>

                <TextBlock Text="{Binding ActiveFilterText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Style="{StaticResource Card}"
                    Padding="14"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,0,8">
                        <TextBlock Text="Haltungen (gesamt)"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding TotalRows}"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,0,8">
                        <TextBlock Text="Haltungen (Filter)"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding FilteredRowsCount}"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0"
                                Grid.Column="2"
                                Margin="0,0,0,8">
                        <TextBlock Text="Netto total"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding NetTotalText}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource NeonCyanBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Grid.Column="0">
                        <TextBlock Text="Mit Positionsdetails"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding RowsWithDetailedCosts}"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Grid.Column="1">
                        <TextBlock Text="Ohne Kosten"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding RowsWithoutCosts}"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Grid.Column="2">
                        <TextBlock Text="Ohne Eigentuemer"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding RowsWithoutOwner}"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    Style="{StaticResource Card}"
                    Padding="14">
                <StackPanel>
                    <TextBlock Text="Spezialstatistik"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource NeonCyanBrush}"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Inliner GFK"/>
                        <TextBlock Grid.Column="1" Text="{Binding StatsInlinerGfkText}" FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Inliner Nadelfilz"/>
                        <TextBlock Grid.Column="1" Text="{Binding StatsInlinerNadelfilzText}" FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Manschetten"/>
                        <TextBlock Grid.Column="1" Text="{Binding StatsManschettenText}" FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Linerendmanschetten (LEM)"/>
                        <TextBlock Grid.Column="1" Text="{Binding StatsLemText}" FontWeight="SemiBold"/>
                    </Grid>

                    <TextBlock Text="Sanierungsquote (alle Haltungen)"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource NeonCyanBrush}"
                               Margin="0,12,0,6"/>
                    <ItemsControl ItemsSource="{Binding RehabilitationShareChart}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,2,0,2">
                                    <DockPanel LastChildFill="True">
                                        <TextBlock Text="{Binding Label}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   DockPanel.Dock="Left"/>
                                        <TextBlock Text="{Binding ValueText}"
                                                   FontWeight="SemiBold"
                                                   DockPanel.Dock="Right"/>
                                    </DockPanel>
                                    <ProgressBar Height="8"
                                                 Margin="0,2,0,0"
                                                 Minimum="0"
                                                 Maximum="100"
                                                 Value="{Binding Percent, Mode=OneWay}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="{Binding RehabilitationShareHint}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontStyle="Italic"
                               TextWrapping="Wrap"
                               Margin="0,6,0,0"/>

                    <TextBlock Text="Kosten nach Ausgefuehrt durch"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource NeonCyanBrush}"
                               Margin="0,12,0,6"/>
                    <ItemsControl ItemsSource="{Binding CostByExecutorChart}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,2,0,2">
                                    <DockPanel LastChildFill="True">
                                        <TextBlock Text="{Binding Label}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   DockPanel.Dock="Left"/>
                                        <TextBlock Text="{Binding ValueText}"
                                                   FontWeight="SemiBold"
                                                   DockPanel.Dock="Right"/>
                                    </DockPanel>
                                    <ProgressBar Height="8"
                                                 Margin="0,2,0,0"
                                                 Minimum="0"
                                                 Maximum="100"
                                                 Value="{Binding Percent, Mode=OneWay}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="{Binding CostByExecutorHint}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontStyle="Italic"
                               TextWrapping="Wrap"
                               Margin="0,6,0,0"/>

                    <TextBlock Text="{Binding SpecialStatsHint}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontStyle="Italic"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"/>
                    <TextBlock Text="{Binding SpecialPositionStatsHint}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,8,0,4"/>
                    <Border BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="6">
                        <ScrollViewer MaxHeight="180"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding SpecialPositionStats}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2,0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="68"/>
                                                <ColumnDefinition Width="44"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Category}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Position}"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding QtyText}"
                                                       HorizontalAlignment="Right"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding HoldingCountText}"
                                                       HorizontalAlignment="Right"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="3"
                Style="{StaticResource Card}"
                Padding="8"
                Margin="0,0,0,10">
            <DataGrid ItemsSource="{Binding Rows}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserResizeRows="False"
                      CanUserSortColumns="True"
                      GridLinesVisibility="All"
                      VerticalGridLinesBrush="{StaticResource BorderBrush}"
                      HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Pixel"
                      ScrollViewer.CanContentScroll="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Haltung" Binding="{Binding Holding}" Width="170"/>
                    <DataGridTextColumn Header="Strasse" Binding="{Binding Street}" Width="170"/>
                    <DataGridTextColumn Header="Eigentuemer" Binding="{Binding Owner}" Width="160"/>
                    <DataGridTextColumn Header="Ausgefuehrt durch" Binding="{Binding ExecutedBy}" Width="160"/>
                    <DataGridTextColumn Header="Sanieren" Binding="{Binding Sanieren}" Width="90"/>
                    <DataGridTextColumn Header="Material" Binding="{Binding Material}" Width="130"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="130"/>
                    <DataGridTextColumn Header="Jahr" Binding="{Binding Year}" Width="80"/>
                    <DataGridTextColumn Header="Zustand" Binding="{Binding Zustand}" Width="90"/>
                    <DataGridTextColumn Header="Massnahmen (Vorschau)" Binding="{Binding MeasuresPreview}" Width="2*"/>
                    <DataGridTextColumn Header="Kostenquelle" Binding="{Binding CostSource}" Width="140"/>
                    <DataGridTextColumn Header="Netto" Binding="{Binding NetCostText}" Width="130">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="TextAlignment" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="4"
                Style="{StaticResource Card}"
                Padding="14">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <CheckBox Content="Datenuebersicht drucken"
                              IsChecked="{Binding IncludeDataSection, Mode=TwoWay}"
                              Margin="0,0,16,0"/>
                    <CheckBox Content="Eigentuemer-Zusammenfassung"
                              IsChecked="{Binding IncludeOwnerSummarySection, Mode=TwoWay}"
                              Margin="0,0,16,0"/>
                    <CheckBox Content="Positions-Zusammenfassung"
                              IsChecked="{Binding IncludePositionSummarySection, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <StackPanel Margin="0,0,12,0"
                                VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPdfExportInProgress}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="{Binding PdfExportProgress}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,4"/>
                        <ProgressBar Width="180"
                                     Height="8"
                                     IsIndeterminate="True"/>
                    </StackPanel>
                    <TextBlock Text="{Binding LastResult}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <Button Content="PDF ausdrucken"
                            Command="{Binding PrintPdfCommand}"
                            Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPdfExportInProgress}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="PDF exportieren"
                            Command="{Binding ExportPdfCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPdfExportInProgress}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Content" Value="PDF wird erstellt..."/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
    </ScrollViewer>
</UserControl>

