<UserControl x:Class="AuswertungPro.Next.UI.Views.Pages.VsaPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <Button Content="VSA berechnen" Command="{Binding RunCommand}"/>
        </StackPanel>

        <TextBlock Text="{Binding Summary}" TextWrapping="Wrap"/>
        <TextBlock Margin="0,14,0,0" Foreground="{StaticResource MutedBrush}"
                   Text="Tipp: Für echte VSA-Klassifizierung musst du die Mapping-JSONs (Anhang C/D) vollständig pflegen."/>
    </StackPanel>
</UserControl>
