<UserControl x:Class="AuswertungPro.Next.UI.Views.Pages.ExportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <Button Content="Export Haltungen.xlsx" Command="{Binding ExportCommand}"/>
            <Button Content="Export Schaechte.xlsx"
                    Command="{Binding ExportSchaechteCommand}"
                    Margin="8,0,0,0"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{Binding LastResult}" TextWrapping="Wrap" Foreground="{StaticResource MutedBrush}"/>
    </Grid>
</UserControl>
