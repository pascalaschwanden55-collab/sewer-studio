<Window x:Class="AuswertungPro.Next.UI.Views.ProtocolEntryEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:AuswertungPro.Next.UI.Views.Controls"
        Title="Protokolleintrag bearbeiten"
        Width="720"
        Height="560"
        WindowStartupLocation="CenterOwner">
        <Window.Resources>
            <x:Array x:Key="ClockPositions" Type="{x:Type sys:String}"
                     xmlns:sys="clr-namespace:System;assembly=mscorlib">
                <sys:String>00</sys:String>
                <sys:String>01</sys:String>
                <sys:String>02</sys:String>
                <sys:String>03</sys:String>
                <sys:String>04</sys:String>
                <sys:String>05</sys:String>
                <sys:String>06</sys:String>
                <sys:String>07</sys:String>
                <sys:String>08</sys:String>
                <sys:String>09</sys:String>
                <sys:String>10</sys:String>
                <sys:String>11</sys:String>
                <sys:String>12</sys:String>
            </x:Array>
            <x:Array x:Key="EzOptions" Type="{x:Type sys:String}"
                     xmlns:sys="clr-namespace:System;assembly=mscorlib">
                <sys:String>EZ0</sys:String>
                <sys:String>EZ1</sys:String>
                <sys:String>EZ2</sys:String>
                <sys:String>EZ3</sys:String>
                <sys:String>EZ4</sys:String>
            </x:Array>
        </Window.Resources>

        <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Code" />
        <TextBox x:Name="CodeTextBox"
                 Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,0,8,8"
                 VerticalAlignment="Center" />
        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,8">
            <Button x:Name="CatalogButton"
                    Content="Code auswaehlen..."
                    Padding="12,4" />
            <Button x:Name="KiSuggestButton"
                    Content="KI-Vorschlag"
                    Margin="0,6,0,0"
                    Padding="12,4" />
        </StackPanel>

        <TextBlock x:Name="AiStatusText"
                   Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,8"
                   Foreground="DarkCyan"
                   TextWrapping="Wrap" />

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="MeterStart" />
        <TextBox x:Name="MeterStartTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" />

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="MeterEnd" />
        <TextBox x:Name="MeterEndTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" />

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Zeit" />
        <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox x:Name="ZeitTextBox" Width="140" Margin="0,0,8,0" />
            <Button x:Name="ZeitFromVideoButton" Content="Zeit aus Video" Padding="10,2" Margin="0,0,8,0" />
            <Button x:Name="SeekToZeitButton" Content="Zum Zeitpunkt" Padding="10,2" />
        </StackPanel>

        <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="MPEG" />
        <TextBox x:Name="MpegTextBox" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" />

        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Streckenschaden" />
        <CheckBox x:Name="StreckenschadenCheckBox"
                  Grid.Row="6"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Margin="0,0,0,8"
                  Content="Ja (MeterStart und MeterEnde sind Pflicht)" />

        <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" Text="Parameter" />
        <ScrollViewer Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Height="120" Margin="0,0,0,8">
            <ItemsControl x:Name="ParametersItems">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="{Binding DisplayName}"
                                       VerticalAlignment="Center" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding AllowedValues}"
                                      Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasAllowedValues}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                            <TextBox Grid.Column="1"
                                     Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasAllowedValues}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding UnitSuffix}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource MutedBrush}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <GroupBox Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" Header="VSA-KEK (Kanalschaden)">
            <Grid Margin="8,6,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,8">
                    <TextBlock Text="Distanz (m)" TextWrapping="Wrap"/>
                    <TextBox Text="{Binding VsaDistanz, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                    <TextBlock Text="Uhrzeit (Video)" TextWrapping="Wrap"/>
                    <TextBox Text="{Binding VsaVideo, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,8">
                    <TextBlock Text="Uhrzeit von" TextWrapping="Wrap"/>
                    <ComboBox ItemsSource="{StaticResource ClockPositions}"
                              IsEditable="True"
                              Text="{Binding VsaUhrVon, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4"/>
                    <Border Background="#FFF6A8" BorderBrush="#B6A400" BorderThickness="1" Padding="4">
                        <controls:ClockPickerControl Width="110"
                                                     Height="110"
                                                     Value="{Binding VsaUhrVon, UpdateSourceTrigger=PropertyChanged}"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                    <TextBlock Text="Uhrzeit bis" TextWrapping="Wrap"/>
                    <ComboBox ItemsSource="{StaticResource ClockPositions}"
                              IsEditable="True"
                              Text="{Binding VsaUhrBis, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4"/>
                    <Border Background="#FFF6A8" BorderBrush="#B6A400" BorderThickness="1" Padding="4">
                        <controls:ClockPickerControl Width="110"
                                                     Height="110"
                                                     Value="{Binding VsaUhrBis, UpdateSourceTrigger=PropertyChanged}"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,12,8">
                    <TextBlock Text="Quantifizierung 1" TextWrapping="Wrap"/>
                    <TextBox Text="{Binding VsaQ1, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,8">
                    <TextBlock Text="Quantifizierung 2" TextWrapping="Wrap"/>
                    <TextBox Text="{Binding VsaQ2, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,12,8">
                    <TextBlock Text="Strecke" TextWrapping="Wrap"/>
                    <TextBox Text="{Binding VsaStrecke, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
                    <TextBlock Text="Verbindung" TextWrapping="Wrap"/>
                    <CheckBox IsChecked="{Binding VsaVerbindung}" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,12,8">
                    <TextBlock Text="Ansicht" TextWrapping="Wrap"/>
                    <TextBox Text="{Binding VsaAnsicht, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,0,0,8">
                    <TextBlock Text="EZ / Bereich" TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox Width="70"
                                  ItemsSource="{StaticResource EzOptions}"
                                  IsEditable="True"
                                  Text="{Binding VsaEz, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,6,0"/>
                        <TextBox Width="90"
                                 Text="{Binding VsaSchachtbereich, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FFF6A8"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Text="Diverses" TextWrapping="Wrap"/>
                    <TextBox Text="{Binding VsaAnmerkung, UpdateSourceTrigger=PropertyChanged}" Background="#FFF6A8"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Top" Text="Beschreibung" />
        <TextBox x:Name="BeschreibungTextBox"
                 Grid.Row="9"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 Height="220"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" Margin="0,10,0,0">
            <TextBlock x:Name="ValidationStatus" Margin="0,0,0,8" Foreground="OrangeRed" TextWrapping="Wrap" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="OkButton" Content="Uebernehmen" Width="120" Margin="0,0,8,0" />
                <Button x:Name="CancelButton" Content="Abbrechen" Width="120" IsCancel="True" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
