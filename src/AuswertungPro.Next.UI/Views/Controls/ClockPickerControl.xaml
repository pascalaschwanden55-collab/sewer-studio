<UserControl x:Class="AuswertungPro.Next.UI.Views.Controls.ClockPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="160"
             Height="160">
    <Grid>
        <Canvas x:Name="FaceCanvas" Background="Transparent">
            <Ellipse x:Name="Face"
                     Stroke="#333"
                     StrokeThickness="1"
                     Fill="White"/>
            <Line x:Name="Hand"
                  Stroke="#D98200"
                  StrokeThickness="3"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round"/>
            <Ellipse x:Name="CenterDot"
                     Width="6"
                     Height="6"
                     Fill="#333"/>
        </Canvas>
    </Grid>
</UserControl>
